@using HotelProject.WebUI.Models.Setting
@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <label>Adınız</label>
    <input type="text" class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <span asp-validation-for="Surname" class="text-danger"></span>

    <br />
    <label>Kullanıcı Adınız</label>
    <input type="text" class="form-control" asp-for="Username" readonly />
    <br />
    <label>Email Adresiniz</label>
    <input type="email" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />

    <label>Şifreniz</label>
    <input type="text" class="form-control" asp-for="Password" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <br />

    <label>Şifreniz Tekrar</label>
    <input type="text" class="form-control" asp-for="ConfirmPassword" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    <br />
    <button class="btn btn-success">Bilgileri Güncelle</button>
</form>