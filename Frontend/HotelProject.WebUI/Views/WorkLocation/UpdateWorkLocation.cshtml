@model UpdateWorkLocationDto
@{
    ViewData["Title"] = "UpdateWorkLocation";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<h1>Çalışma Yeri Güncelleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="WorkLocationID" />
    <label>Çalışma Yeri</label>
    <input type="text" asp-for="WorkLocationName" class="form-control" />
    <span asp-validation-for="WorkLocationName" class="text-danger"></span>
    <br />
    <label>Çalışılan Şehir</label>
    <input type="text" asp-for="WorkLocationCity" class="form-control" />
    <span asp-validation-for="WorkLocationCity" class="text-danger"></span>
    <br />
  
    <button class="btn btn-primary">Çalışma Yeri Bilgilerini Güncelle</button>
</form>


